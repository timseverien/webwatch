{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vitest run && npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "vitest run && npm run test --workspaces --if-present",
    "update:data": "npm run build --workspace=@ww/data"
  },
  "workspaces": [
    "packages/core",
    "packages/data",
    "packages/website"
  ],
  "devDependencies": {
    "@types/node": "^20.3.3",
    "vite-node": "^0.32.2",
    "vitest": "^0.33.0"
  },
  "dependencies": {
    "date-fns": "^2.30.0"
  }
}